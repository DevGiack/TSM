<div class="container mt-4">
	<div class="row full-height justify-content-center">
    <div class="col-5 text-center">
      <div class="card-3d-wrap mx-auto">
        <div class="card-edit-3d-wrapper card-3d-wrapper">
          <div class="card-front">
            <div class="center-wrap">
              <div class="section text-center">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="row">
                    <div class="col-md-5">
                      <div class="field">
                        <%= f.label :Prénom, class: "text_form" %><br />
                        <%= f.text_field :first_name,class: "form-control",  autofocus: true, autocomplete: "first_name" %>
                      </div>
                    </div>

                    <div class="col-2">
                    </div>

                    <div class="col-md-5">
                      <div class="field">
                        <%= f.label :Nom, class: "text_form" %><br />
                        <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name" %>
                      </div>
                    </div>
                      <div class="field">
                        <%= f.label :Numéro_de_téléphone, class: "text_form" %><br />
                        <%= f.telephone_field :phone,class: "form-control",  autofocus: true, autocomplete: "phone" %>
                      </div>

                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                      <% end %>

                      <div class="field">
                        <%= f.label :Nouveau_mot_de_passe, class: "text_form" %><br />
                        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
                        <% if @minimum_password_length %>
                        <% end %>
                      </div>

                      <div class="field">
                        <%= f.label :Veuillez_confirmer_votre_nouveau_mot_de_passe, class: "text_form" %><br />
                        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
                      </div>

                      <div class="field">
                        <%= f.label :Mot_de_passe_actuel, class: "text_form" %><p id="text-explain-form">(Nous avons besoin de votre mot de passe pour modifier votre profil)</p><br />
                        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
                      </div>


                      <div class="actions mt-3">
                        <%= f.submit "Mettre à jour vos données personnelles ", class: "button btn-secondary"%>
                      </div>

                    <% end %>  
                </div>	
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>

  <div class="col-2">
  </div>
  
                
  <div class="col-5 text-center">
    <div class="card-3d-wrap mx-auto">
      <div class="card-edit-3d-wrapper card-3d-wrapper">
        <div class="card-front">
          <div class="center-wrap">
            <div class="section text-center">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="row">
                    <div class="col-md-5">
                        <div class="field">
                        <%= f.label :Prénom, class: "text_form" %><br />
                        <%= f.text_field :first_name,class: "form-control",  autofocus: true, autocomplete: "first_name" %>
                      </div>
                    </div>

                    <div class="col-2">
                    </div>

                    <div class="col-md-5">
                      <div class="field">
                        <%= f.label :last_name, class: "text_form" %><br />
                        <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name" %>
                      </div>
                    </div>
                      <div class="field">
                        <%= f.label :phone, class: "text_form" %><br />
                        <%= f.telephone_field :phone,class: "form-control",  autofocus: true, autocomplete: "phone" %>
                      </div>

                      <div class="actions mt-3">
                        <%= f.submit "Mettre à jour mon adresse", class: "button btn-secondary"%>
                      </div>

                    <% end %>  
                </div>	
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row container-delete">
  <div class="col-md-5">
    <h2>Supprimer mon compte</h2>
    <%= button_to "Supprimer", registration_path(resource_name), form: { data: { turbo_confirm: "Êtes vous sûrs ?" }}, method: :delete, class:"button-delete button btn-secondary" %>
  </div>
</div>
</div>