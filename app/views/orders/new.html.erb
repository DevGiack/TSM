<div>
  <h1>Votre commande :</h1>
  <p>add_count : <%= @user_addresses_count %></p>
  <p>Prénom : <%= current_user.first_name %></p>
  <p>Nom : <%= current_user.last_name %></p>
  <p>Email : <%= current_user.email %></p>
  <p>Tel : <%= current_user.phone %></p>
  <br><br/>

  <% if @user_addresses_count > 0 %>
    <legend>Veuillez sélectionner votre adresse de livraison :</legend>
    <br><br/>
    <% @user_addresses.each do |address| %>
      <button onclick = "liv(address.id)" class="btn btn-outline-light border border-2 border-light rounded-pill"><span><%= address.address_type %></span><span></button>
    <% end %>
  <% else %>
    <legend>Vous devez renseigner une adresse de livraison pour pourssuivre votre commande</legend>
    <%= link_to "éditer mes informations personnelles", new_user_address_path , style:"color:blue"%>
  <% end %>

  <table class="text-white">
    <% @cart.each do |c| %>
      <tr>
        <td><%= @ref[c.item_id.to_s][:name] %> : <%= c.quantity %> grammes</td>
        <td>  <%= (c.quantity * (c.price_cents.to_f / 100)).round(2) %> euros</td>
      </tr>
    <% end %>
    <br><br/>
    <tr>
      <td>
        <hr class="my-4">
        <div class="d-flex justify-content-between mb-3">
          <h5 class="text-white text-uppercase">Prix total HT</h5>
          <h5 class="text-white">€ <%= (@total.to_f * 100/(100+19.6)).round(2)%></h5>
        </div>
        <div class="d-flex justify-content-between mb-3">
          <h5 class="text-white text-uppercase">TVA</h5>
          <h5 class="text-white">€ <%= (@total.to_f  - (@total.to_f * 100/(100+19.6))).round(2)%></h5>
        </div>
        <div class="d-flex justify-content-between mb-3">
          <h5 class="text-white text-uppercase">Prix total TTC</h5>
          <h5 class="text-white">€ <%= (@total) %></h5>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <button type="button" class="btn btn-secondary btn-block btn-m mt-5 me-md-2">
            <%= link_to "Payer", checkout_create_path(:total => @total),class:"text-white" %>
          </button>
          <button type="button" class="btn btn-danger btn-block btn-m mt-5">
            <%= link_to "Retour au panier", carts_path ,class:"text-white"%>
          </button>
        </div>
      </td>
    </tr>
  </table>
</div>
