
<div class="container-fluid" style="margin-top: 100px;">
  <div class="d-flex justify-content-center prod_head">
    <h1>PRODUITS</h1>
  </div>  
</div>



<div id="products">
  <div class="container-fluid">
    <div class="d-flex justify-content-center row mx-2 row-cols-4">
      <% @products.each do |product| %>
        <div class="col">
          <div class="card" style="width: 20rem;">
            <%= link_to product do %>
              <%= image_tag "truffe_1.jpg", class: "card-img" %>
            <%end%>
            <div class="card-body cardb-text">
              <h4 class="card-title"><%= product.name%></h4>
              <p class="card-text"><%= product.description%></p>
            </div>
            <div class="card-body cardb-buy">
              <button class="button btn-outline btn-sm"><%= link_to "Voir ce produit", product_path(product.id) , class:"product_link"%></button>
              <h3><%= product.price%>â‚¬</h3>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>



