<div class="title-product">

  <div class="truffle-symbol">
    <i class="fa-solid fa-store"></i>
  </div>

  <h1>NOS PRODUITS DU MOMENT</h1>

  <div class="truffle-symbol">
    <i class="fa-solid fa-store"></i>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-0">
  <% @highlighted_products.each do |hp| %>
    <div class="col">
      <div class="card" style="width: 21.5rem;">
        <%= image_tag hp.product_image, class: "card-img" %>
        <div class="card-body cardb-text">
          <h4 class="card-title"><%= hp.price %> € / gr</h4>
          <p><b><%= hp.name %></b></p>
          <p class="card-text debord"><%= hp.description %></p>
        </div>
        <div class="card-body cardb-buy">
          <%= button_to "Voir ce produit", product_path(hp.id), :class => "button btn-outline btn-sm product_link", :method => :get %>
        </div>
      </div>
    </div>
  <%end%>
</div>

