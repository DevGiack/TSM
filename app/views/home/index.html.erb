    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item c-item active">
      <%= image_tag "1.jpg", class:"d-block w-100 c-image" %>
      <div class="carousel-caption d-none d-md-block">
        <h3>Le diamant noir du terroir</h3>
        <h5>Truffe fraiche noire extra Tuber Melanosporum</h5>
        <button class="button btn-secondary btn-lg" role="button">La qualité est notre exigence</button>
