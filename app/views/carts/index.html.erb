<p style="color: green"><%= notice %></p>

<h1>Cart</h1>

<div id="carts">
<table style="color: white; width: 50%">
  <tr>
    <th>id</th>
    <th>quantity</th>
    <th>prix HT</th>
  </tr>
  <% @cart.each do |c| %>
    <tr><td><%= c.item_id %></td><td><%= c.quantity %></td><td><%= c.price_cents %></td><tr>
  <% end %>
    <tr><td></td><th>total TTC</th><td><%= @total %></td><tr>
  </table>
</div>

  <section class="h-100 h-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12">
          <div class="card card-registration card-registration-2" style="border-radius: 15px;">
            <div class="card-body p-0">
              <div class="row g-0">
                <div class="col-lg-8">
                  <div class="p-5">
                  
                    <div class="d-flex justify-content-between align-items-center mb-5">
                      <h1 class="fw-bold mb-0" style="color: var(--secondary);">Mon panier</h1>
                      <%# <h6 class="mb-0 text-muted"><%= c.item_id <%=items</h6>  %>    <%# indication des id à mettre en indication de quantité de produit dans le panier %>
                    </div>
                  
                    <hr class="my-4">
                    <% @cart.each do |c| %>
                      <div class="row mb-4 d-flex justify-content-between align-items-center">
                        <div class="col-md-2 col-lg-2 col-xl-2">
                            <%= image_tag "truffe_1.jpg", class: "card-img", alt:"Truffes" %>
                        </div>
                        <div class="col-md-3 col-lg-3 col-xl-3">
                          <h6 class="text-muted">Truffes</h6>
                          <h6 class="text-black mb-0">produit: <%= c.item_id %></h6>
                          <h5>€ <%= c.price_cents %></h5>
                        </div>
                        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                          <button class="btn btn-link px-2"
                            onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                            <i class="fas fa-minus"></i>
                          </button>

                          <input id="form1" min="0" name="quantity" value="1" type="number"
                            class="form-control form-control-sm" />

                          <button class="btn btn-link px-2"
                            onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                            <i class="fas fa-plus"></i>
                          </button>
                        </div>
                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                          <h6 class="mb-0">€ 44.00</h6>
                        </div>
                        <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                          <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                        </div>
                      </div>
                    <hr class="border-4" style="color: var(--secondary);">
                    <% end %>

                    <%# Pas toucher au back page %>
                    <hr class="my-4">
                    <div class="pt-5">
                      <h6 class="mb-0"><a href="#!" class="text-body"><i
                            class="fas fa-long-arrow-alt-left me-2"></i>Revenir à la page produit</a></h6>
                    </div>

                  </div>
                </div>

                <%# Partie de droite! %>
                <%# <% @cart.each do |c| %> %>
                <div class="col-lg-4 bg-grey">
                  <div class="p-5">
                    <h3 class="fw-bold mb-5 mt-2 pt-1" style="color: var(--secondary);">Récapitulatif de commande</h3>
                    <hr class="my-4">

                    <div class="d-flex justify-content-between mb-4">
                      <h5 class="text-uppercase">Total des articles: </h5>
                      <h5>€ <%= c.price_cents %></h5>
                    </div>

                    <h5 class="text-uppercase mb-3">Livraison</h5>

                    <div class="mb-4 pb-2">
                      <select class="select">
                        <option value="1">Standard - La poste - €5.00</option>
                        <option value="2">En point relais - €5.00</option>
                        <option value="3">UPS - €12.00</option>
                        <option value="4">À récuperer en magasin - Gratuit</option>
                      </select>
                    </div>

                    <h5 class="text-uppercase mb-3">Code de réduction</h5>

                    <div class="mb-5">
                      <div class="form-outline">
                        <input type="text" id="form3Examplea2" class="form-control form-control-lg" style="border-color: "/>
                        <%# <label class="form-label text-black" for="form3Examplea2">Enter your code</label> %> <%# Mettre dans le input%>>
                      </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between mb-5">
                      <h5 class="text-uppercase">Prix total</h5>
                      <h5>€ <%= @total %></h5>
                    </div>

                    <button type="button" class="btn btn-secondary btn-block btn-m"
                      data-mdb-ripple-color="dark"><%= link_to "Payer", checkout_create_path(:total => @total),class:"text-white" %>
                    </button>
                    <button type="button" class="btn btn-danger btn-block btn-m"
                      data-mdb-ripple-color="dark"><%= link_to "Delete cart", new_cart_path ,class:"text-white"%>
                    </button>
                  </div>
                </div>
              </div>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


